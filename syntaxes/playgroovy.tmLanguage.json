{
"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
"name": "Play 1.x Groovy Template",
"patterns": [
	{
		"include": "#code"
	},
	{
		"include": "#comments"
	},
	{
		"include": "text.html.derivative"
	}
],
"repository": {
	"comments": {
		"patterns": [
		{
			"name": "meta.embedded.block.groovycomment",
			"begin": "\\*{",
			"end": "}\\*",
			"patterns": [{
				"include": "comment.block.html"
			}]
		}
	]
	},
	"code": {
		"patterns": [
			{
				"name": "meta.embedded.block.groovy",
				"begin": "%{",
				"end": "}%",
				"patterns": [{
					"include": "source.groovy"
				}]
			},
			{
				"name": "meta.embedded.tag.if",
				"begin": "#{(?:else)?if\\s",
				"end": "}",
				"patterns": [{
					"include": "source.groovy"
				}]
			},
			{
				"name": "meta.embedded.tag.script",
				"begin": "#{page.script.*?}",
				"end": "#{\/page.script}",
				"patterns": [{
					"include": "source.js"
				}]
			},
			{
				"name": "meta.embedded.tag.style",
				"begin": "#{page.style.*?}",
				"end": "#{\/page.style}",
				"patterns": [{
					"include": "source.css"
				}]
			}
		]
	}
},
"scopeName": "text.html.playgroovy"
}